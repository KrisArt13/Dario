    }

    .but {
      padding: 10px;
      justify-content: center;
      
    }

    .but button {
      font-family: "Montserrat", sans-serif;
      padding: 9px 25px;
      color: white;
      background-color: #15171d;
      border: 1px solid white;
      border-radius: 50px;
      cursor: pointer;
      transition: all 0.3s ease 0s;
    }

    .but button:hover {
      background-color: rgba(248, 243, 243, 0.904);
      color: black;
      border: 1px solid black;
    }

    .but i {
      transform: scale(2);
      margin-right: 15px; /* Espacio entre los iconos */
      margin-left: 10px;
      color: #fff;
    }
    .but i:hover {
      transform: scale(2.5);
      transition: transform 0.3s ease-in-out;
    }
    .yo-prest {
      width: 100%;
      display: flex;
      justify-content: center; /* Centrar la imagen */
      position: relative;
    }

    .mii-imagen {
      position: relative;
    }

    .imagenmia {
      width: 600px;
      height: 600px;
      border-radius: 20%;
      object-fit: cover;
    }

    .icono {
      position: absolute;
      width: 60px;
      height: 60px;
      border-radius: 20%;
      opacity: 0;
      transition:
        transform 1s ease-out,
        opacity 0.5s;
    }

    /* Posiciones iniciales */
    .icono:nth-child(2) {
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
    .icono:nth-child(3) {
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
    .icono:nth-child(4) {
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
    .icono:nth-child(5) {
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
    .icono:nth-child(6) {
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    /* Animación final */
    .activo:nth-child(2) {
      transform: translate(-290%, -220px);
      opacity: 1;
    } /*HTML*/
    .activo:nth-child(3) {
      transform: translate(90px, -230%);
      opacity: 1;
    } /*CSS*/
    .activo:nth-child(4) {
      transform: translate(-190px, -10%);
      opacity: 1;
    } /*JS*/
    .activo:nth-child(5) {
      transform: translate(80px, 70px);
