---
import {Image } from 'astro:assets';
import yoIcono from '/public/img/yopo/luna.jpg';
---

<header>
  <div class="tracking-in-expand">
    <div class="img">
    <Image src={yoIcono} alt="logo" />
    </div>
    <div>
      <p>Dario Rodriguez</p>
      <p class="uwu">Front-end Developer</p>
    </div>
  </div>
  <nav>
    <ul class="nav__links">
      <li><a href="#proyectos">Proyectos</a></li>
      <li><a href="#sobre-mi">Sobre mí</a></li>
      <li><a href="#certificados">Certificaciones</a></li>
      <li><a href="#skills">Skills</a></li>
    </ul>
  </nav>
  
  <button class="menu-hamburguesa" onclick="toggleMenu()">☰</button>
  
</header>

<style>
  @import url(https://fonts.googleapis.com/css?family=Khula:700);
  @import url("https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap");

  p{
    margin: 0;
  }

  li,
  a {
    font-family: "Montserrat", sans-serif;
    font-weight: 300;
    font-size: 17px;
    color: #edf0f1;
    background-color: #26272c00;
    text-decoration: none;
  }
  a:hover {
    color: #ffffff;
    text-shadow: 10px 10px 20px rgba(0, 102, 255, 0.8);
  }

  header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  padding: 10px 5%; /* Padding ajustado */
  max-width: 1200px; /* Limitar el ancho del header */
  height: 60px;
  display: flex;
  align-items: center;
  z-index: 1000;
  justify-content: space-between; 
  background: rgba(22, 22, 28, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 8px; /* Bordes suaves para destacar */
  }

  .logo {
  font-size: 24px;
  font-weight: bold;
  color: #ffffff;
  display: flex;
  align-items: center; /* Asegura que el texto e imagen estén alineados */
}

.nav__links {
  list-style: none;
  display: flex;
  gap: 1rem;
  padding: 0;
  margin: 0;
}
.nav__links li {
  display: inline-block;
}
.nav__links li {
  transition: all 0.3s ease 0s;
}

  .tracking-in-expand {
    -webkit-animation: tracking-in-expand 0.7s
      cubic-bezier(0.215, 0.61, 0.355, 1) both;
    animation: tracking-in-expand 0.7s cubic-bezier(0.215, 0.61, 0.355, 1) both;
    cursor: pointer;
    margin-right: auto;
    font-size: 24px;
    color: #edf0f1;
    font-family: "Montserrat", sans-serif;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .uwu {
    font-family: "Montserrat", sans-serif;
    color: rgb(255, 255, 255);
    font-size: 15px;
    font-weight: normal;
  }

  .tracking-in-expand img {
    width: 60px; /* Imagen redimensionada para pantallas pequeñas */
    height: 60px;
    border-radius: 50%;
  }

  .menu-hamburguesa {
  display: none;
  font-size: 24px;
  background: none;
  border: none;
  color: #ffffff;
  cursor: pointer;
  z-index: 1001;
  margin-left: auto;
}

  /* ----------------------------------------------
 * Generated by Animista on 2025-1-23 12:50:9
 * Licensed under FreeBSD License.
 * See http://animista.net/license for more info. 
 * w: http://animista.net, t: @cssanimista
 * ---------------------------------------------- */

  /**
 * ----------------------------------------
 * animation tracking-in-expand
 * ----------------------------------------
 */

  @-webkit-keyframes tracking-in-expand {
    0% {
      letter-spacing: -0.5em;
      opacity: 0;
    }
    40% {
      opacity: 0.6;
    }
    100% {
      opacity: 1;
    }
  }
  @keyframes tracking-in-expand {
    0% {
      letter-spacing: -0.5em;
      opacity: 0;
    }
    40% {
      opacity: 0.6;
    }
    100% {
      opacity: 1;
    }
  }

/* Para pantallas medianas */
@media (max-width: 1024px) {
  header {
    max-width: 100%; /* Ocupa todo el ancho en pantallas medianas */
    border-radius: 0; /* Eliminar bordes para mayor fluidez */
  }
}


  /* Pantallas pequeñas (móviles) */
@media (max-width: 768px) {
  header {
    flex-direction: row; /* Mantener en fila */
    justify-content: space-between; /* Separar los elementos */
    align-items: center; /* Alinear verticalmente */
    padding: 10px 3%;
    height: auto;
  }

  .nav__links {
    display: none; /* Ocultar el menú en pantallas pequeñas */
    flex-direction: column;
    position: absolute;
    top: 60px;
    left: 0;
    right: 0;
    background-color: #15171d;
    padding: 1rem;
    gap: 1rem;
    border-radius: 0 0 8px 8px;
  }
  
  .tracking-in-expand img {
    width: 50px;
    height: 50px;
  }

  .logo {
    max-width: 150px;
  }

  .uwu {
    font-size: 12px; /* Texto ajustado para pantallas pequeñas */
  }
  .menu-hamburguesa {
    display: block; /* Mostrar el botón de menú hamburguesa */
    margin-left: auto; /* Empujar el botón hacia la derecha */
  }
  .nav__links.show {
    display: flex;
  }
}
  
</style>
